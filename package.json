{
  "name": "acrolinx-node-typescript-boilerplate",
  "version": "0.0.0",
  "description": "Minimal boilerplate to quick-start Acrolinx development in TypeScript.",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^8.0.0-alpha.40",
    "dotenv": "^16.4.5",
    "eslint": "^9.7.0",
    "eslint-plugin-sonarjs": "^1.0.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.3",
    "tsutils": "^3.21.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.0-alpha.45"
  },
  "scripts": {
    "start": "node build/src/main.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsc",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint .",
    "test": "jest",
    "prettier": "prettier --config .prettierrc --write .",
    "test:watch": "jest --watch"
  },
  "author": "Acrolinx GmbH",
  "license": "Apache-2.0",
  "dependencies": {
    "@acrolinx/sdk": "^1.3.1",
    "cross-fetch": "^4.0.0",
    "tslib": "^2.6.3",
    "uuidv4": "^6.2.13"
  }
}

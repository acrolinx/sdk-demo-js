{
  "name": "acrolinx-node-typescript-boilerplate",
  "version": "0.0.0",
  "description": "Minimal boilerplate to quick-start Acrolinx development in TypeScript.",
  "type": "module",
  "engines": {
    "node": ">= 16.13"
  },
  "devDependencies": {
    "@types/jest": "~29.5.6",
    "@types/node": "~16",
    "@typescript-eslint/eslint-plugin": "~6.8",
    "@typescript-eslint/parser": "~6.8",
    "eslint": "~8.16",
    "eslint-config-prettier": "~9.0",
    "eslint-plugin-jest": "~27.4.2",
    "jest": "~29.7.0",
    "prettier": "~3.1",
    "rimraf": "~5.0",
    "ts-jest": "~29.1.1",
    "tsutils": "~3.21",
    "typescript": "~4.7"
  },
  "scripts": {
    "start": "node build/src/main.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint . --ext .ts --ext .mts",
    "test": "jest --coverage",
    "prettier": "prettier --config .prettierrc --write .",
    "test:watch": "jest --watch"
  },
  "author": "Acrolinx GmbH",
  "license": "Apache-2.0",
  "dependencies": {
    "@acrolinx/sdk": "^0.1.9",
    "cross-fetch": "^4.0.0",
    "tslib": "~2.4",
    "uuidv4": "^6.2.13"
  }
}
